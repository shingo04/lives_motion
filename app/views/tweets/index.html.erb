<div class="contents">
  <h1>みんなの投稿</h1>
  <div class="contents">
    <% @tweets.each do |tweet| %>
      <div class="content">
        <div class="user">
          <div class="user-icon"></div>
          <%= link_to tweet.user.nickname, user_path(tweet.user.id), class: "user-name", data: {"turbolinks"=>false} %>
        </div>
        <%= image_tag tweet.image.variant(resize: '400x400'), class: 'image' if tweet.image.attached? %>
        <div class="text">
          <%= link_to tweet.content, tweet_path(tweet) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= form_with(model: @tweet, local: true) do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, placeholder: "投稿内容を入力してください", autofocus: true %>
  </div>
  <label class="form-image">
    <label>
      <%= f.label :image %>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </label>
  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>
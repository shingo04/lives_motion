<div class="sign-up">
<div class="sign-up-title">ユーザー情報入力</div>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<%= render "devise/shared/error_messages" %>

  <div class="field">
    <%= f.label :email, "メールアドレス", class: "sign-up-text" %><span class="must"> ※</span><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign-up-form' %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード", class: "sign-up-text" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)<span class="must"> ※</span></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'sign-up-form' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワードの確認", class: "sign-up-text" %><span class="must"> ※</span><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'sign-up-form' %>
  </div>

  <div class="field">
    <%= f.label :nickname, "ニックネーム(10文字以内)", class: "sign-up-text" %><span class="must"> ※</span><br />
    <%= f.text_field :nickname, class: 'sign-up-form' %>
  </div>

  <div class="field">
    <%= f.label :gender_id, "性別", class: "sign-up-text" %><span class="must"> ※</span><br />
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"gender-select"}) %>
  </div>

  <div class="field">
    <%= f.label :age, "年齢", class: "sign-up-text" %><span class="must"> ※</span><br />
    <%= f.text_field :age, class: 'sign-up-form' %>
  </div>

  <div class="field">
    <%= f.label :height, "身長", class: "sign-up-text" %><span class="must"> ※</span><br />
    <%= f.text_field :height, class: 'sign-up-form' %>
  </div>

  <div class="field">
    <%= f.label :weight, "体重", class: "sign-up-text" %><span class="must"> ※</span><br />
    <%= f.text_field :weight, class: 'sign-up-form' %>
  </div>

  <div class="field">
    <%= f.label :introduction, "自己紹介", class: "sign-up-text" %><br />
    <%= f.text_area :introduction, class: 'sign-up-introduction' %>
  </div>

  <div class="actions">
    <%= f.submit "登 録", class: "sign-up-submit" %>
  </div>
<% end %>

  <div class="sign-up-link">
    <%= render "devise/shared/links" %>
  </div>
</div>

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<%= render "devise/shared/error_messages" %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age %>
  </div>

  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>

  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </div>

  <div class="field">
    <%= f.label :bmr %><br />
    <%= f.text_field :bmr %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "Edit" %>
  </div>
<% end %>
